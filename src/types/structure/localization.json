{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "localization.json",
    "title": "Localization File",
    "description": "A JSON file used for localization of strings in the application.",
    "type": "object",
    "properties": {
        "commands": {
            "type": "object",
            "description": "Command-related messages used in the application.",
            "patternProperties": {
                "^[a-zA-Z0-9_.-]+$": {
                    "type": "string",
                    "description": "A command message entry."
                }
            }
        },
        "logging": {
            "type": "object",
            "description": "Logging-related messages used in the application.",
            "properties": {
                "debug": {
                    "type": "object",
                    "description": "Debug messages used in logging.",
                    "patternProperties": {
                        "^[a-zA-Z0-9_.-]+$": {
                            "type": "string",
                            "description": "A debug log message entry."
                        }
                    }
                },
                "error": {
                    "type": "object",
                    "description": "Error messages used in logging.",
                    "patternProperties": {
                        "^[a-zA-Z0-9_.-]+$": {
                            "type": "string",
                            "description": "An error log message entry."
                        }
                    }
                },
                "info": {
                    "type": "object",
                    "description": "Info messages used in logging.",
                    "patternProperties": {
                        "^[a-zA-Z0-9_.-]+$": {
                            "type": "string",
                            "description": "An info log message entry."
                        }
                    }
                },
                "log": {
                    "type": "object",
                    "description": "General log messages used in logging.",
                    "patternProperties": {
                        "^[a-zA-Z0-9_.-]+$": {
                            "type": "string",
                            "description": "A general log message entry."
                        }
                    }
                },
                "warn": {
                    "type": "object",
                    "description": "Warning messages used in logging.",
                    "patternProperties": {
                        "^[a-zA-Z0-9_.-]+$": {
                            "type": "string",
                            "description": "A warning log message entry."
                        }
                    }
                }
            },
            "required": ["debug", "error", "info", "log", "warn"]
        }
    }
}
